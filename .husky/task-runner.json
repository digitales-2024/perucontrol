{
    "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
    "tasks": [
        {
            "name": "Format with csharpier",
            "command": "dotnet",
            "args": [
                "csharpier",
                "${staged}"
            ],
            "include": [
                "**/*.cs"
            ]
        },
        {
            "name": "Validate conventional commit",
            "command": "bash",
            "args": [".husky/scripts/commit-msg.sh", ".git/COMMIT_EDITMSG"]
        },
        {
            "name": "Quick build",
            "command": "bash",
            "args": [".husky/scripts/quick-build.sh"]
        }
    ]
}
